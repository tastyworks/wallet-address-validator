{
  "name": "@tastyworks/wallet-address-validator",
  "description": "Wallet address validator for Bitcoin and other Altcoins.",
  "keywords": [
    "btc",
    "bitcoin",
    "bitcoin cash",
    "litecoin",
    "decred",
    "dogecoin",
    "ethereum",
    "ripple",
    "dash",
    "neo",
    "gas",
    "komodo",
    "zcash",
    "qtum",
    "altcoin",
    "bankex",
    "monero",
    "segwit",
    "crypto",
    "address",
    "wallet",
    "validator",
    "vertcoin",
    "nano",
    "raiblocks",
    "javascript",
    "browser",
    "nodejs"
  ],
  "version": "1.2.0",
  "author": "developers@tastyworks.com",
  "homepage": "https://github.com/ognus/wallet-address-validator",
  "license": "SEE LICENSE IN LICENSE",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tastyworks/wallet-address-validator.git"
  },
  "main": "dist/wallet_address_validator.js",
  "engines": {
    "node": "*"
  },
  "files": [
    "dist/wallet_address_validator.js"
  ],
  "scripts": {
    "bundle": "browserify src/wallet_address_validator.js --standalone WAValidator --outfile dist/wallet-address-validator.js",
    "minify": "uglifyjs -c -m -o dist/wallet-address-validator.min.js -- dist/wallet-address-validator.js",
    "test:node": "mocha test",
    "test:browser": "karma start",
    "test": "npm run test:node && npm run test:browser",
    "start": "npm run bundle && npm run minify && npm test",
    "prepublishOnly": "npm version minor",
    "postpack": "git tag -a $npm_package_version -m $npm_package_version && git push origin $npm_package_version"
  },
  "dependencies": {
    "base-x": "^3.0.4",
    "jssha": "2.3.1",
    "safe-buffer": "^5.2.1"
  },
  "devDependencies": {
    "browserify": "^15.1.0",
    "chai": "^4.1.2",
    "karma": "^6.4.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^2.0.1",
    "mocha": "^5.0.2",
    "uglify-js": "^3.3.13"
  }
}
