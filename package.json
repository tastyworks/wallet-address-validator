{
  "name": "@tastyworks/wallet-address-validator",
  "description": "Wallet address validator for Bitcoin and other Altcoins.",
  "version": "1.21.0",
  "types": "./lib/esm/types/wallet_address_validator.d.ts",
  "main": "./lib/esm/wallet_address_validator.js",
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "npm run clean && npm run build:esm",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "prepack": "npm run build",
    "test:node": "mocha test",
    "test:browser": "karma start",
    "test": "npm run test:node && npm run test:browser",
    "start": "npm run bundle && npm run minify && npm test",
    "prepublishOnly": "npm version minor && npm run build",
    "postpack": "git tag -a $npm_package_version -m $npm_package_version && git push origin $npm_package_version"
  },
  "dependencies": {
    "jssha": "2.3.1",
    "safe-buffer": "^5.2.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "karma": "^6.4.2",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^2.0.1",
    "mocha": "^5.0.2",
    "typescript": "^4.9.5",
    "uglify-js": "^3.3.13"
  },
  "author": "developers@tastytrade.com",
  "homepage": "https://github.com/tastyworks/wallet-address-validator",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "engines": {
    "node": "*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tastyworks/wallet-address-validator.git"
  },
  "files": [
    "lib/**/*"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/wallet_address_validator.d.ts",
        "default": "./lib/esm/wallet_address_validator.js"
      }
    }
  }
}
